<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--Content-->
    <LinearLayout
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Logo-->
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logostore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--User-->
        <EditText
            android:layout_marginTop="@dimen/m1"
            android:textSize="@dimen/h3"
            android:background="@drawable/text_field_user"
            android:inputType="text"
            android:hint="User :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--Password-->
        <EditText
            android:layout_marginTop="@dimen/m1"
            android:background="@drawable/text_field_password"
            android:textSize="@dimen/h3"
            android:inputType="textPassword"
            android:hint="Password :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--Login-->
        <Button
            android:layout_marginTop="@dimen/m1"
            android:background="@drawable/bg_buttom"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--New Register-->
        <TextView
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtRegister"
            android:layout_gravity="center_horizontal "
            android:text="New Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>